local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "Auto Goal",
    LoadingTitle = "Loading...",
    LoadingSubtitle = "Made by GARMMAMAMMAMAM",
    ConfigurationSaving = {Enabled = false},
    KeySystem = false
})

local MainTab = Window:CreateTab("Main")

MainTab:CreateToggle({
    Name = "Auto Goal",
    CurrentValue = false,
    Callback = function(state)
        _G.AutoGoal = state

        if state then
            _G.AutoGoalLoop = task.spawn(function()
                while _G.AutoGoal do
                    for _, obj in workspace:GetDescendants() do
                        if obj.Name == "Ball" and (obj:IsA("Part") or obj:IsA("MeshPart") or obj:IsA("UnionOperation")) then
                            obj.Size = Vector3.new(2048, 2048, 2048)
                            task.wait(0.01)
                            obj.Size = Vector3.new(2048, 2048, 4027)
                            task.wait(0.01)
                        end
                    end
                    task.wait()
                end
            end)
        else
            if _G.AutoGoalLoop then
                task.cancel(_G.AutoGoalLoop)
                _G.AutoGoalLoop = nil
            end
        end
    end
})
